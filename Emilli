
-- Main interface setup
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local MinimizedButton = Instance.new("TextButton")
local CloseButton = Instance.new("TextButton")
local TrollTab = Instance.new("TextButton")
local PlayerTab = Instance.new("TextButton")
local OthersTab = Instance.new("TextButton")
local MinimizedIcon = Instance.new("ImageButton")

-- Properties for the interface
ScreenGui.Name = "CustomScript"
ScreenGui.Parent = game.CoreGui

Frame.Name = "MainFrame"
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(255, 182, 193) -- Pink for hearts theme
Frame.Position = UDim2.new(0.5, -150, 0.5, -100)
Frame.Size = UDim2.new(0, 300, 0, 200)

MinimizedButton.Name = "MinimizeButton"
MinimizedButton.Parent = Frame
MinimizedButton.Text = "Minimize"
MinimizedButton.Size = UDim2.new(0, 100, 0, 30)
MinimizedButton.Position = UDim2.new(0, 10, 0, 160)

CloseButton.Name = "CloseButton"
CloseButton.Parent = Frame
CloseButton.Text = "Close"
CloseButton.Size = UDim2.new(0, 100, 0, 30)
CloseButton.Position = UDim2.new(0, 120, 0, 160)

TrollTab.Name = "TrollTab"
TrollTab.Parent = Frame
TrollTab.Text = "Troll"
TrollTab.Size = UDim2.new(0, 80, 0, 30)
TrollTab.Position = UDim2.new(0, 10, 0, 10)

PlayerTab.Name = "PlayerTab"
PlayerTab.Parent = Frame
PlayerTab.Text = "Player"
PlayerTab.Size = UDim2.new(0, 80, 0, 30)
PlayerTab.Position = UDim2.new(0, 100, 0, 10)

OthersTab.Name = "OthersTab"
OthersTab.Parent = Frame
OthersTab.Text = "Others"
OthersTab.Size = UDim2.new(0, 80, 0, 30)
OthersTab.Position = UDim2.new(0, 190, 0, 10)

MinimizedIcon.Name = "MinimizedIcon"
MinimizedIcon.Parent = ScreenGui
MinimizedIcon.Image = "rbxassetid://12345678" -- Replace with asset ID for an "E" icon
MinimizedIcon.Size = UDim2.new(0, 50, 0, 50)
MinimizedIcon.Position = UDim2.new(0.5, -25, 0.5, -25)
MinimizedIcon.Visible = false

-- Functionality mapping
local function playMusic(id)
    local Sound = Instance.new("Sound", game.Workspace)
    Sound.SoundId = "rbxassetid://"..id
    Sound:Play()
end

local function adjustPlayer(speed, jumpPower)
    local Player = game.Players.LocalPlayer
    Player.Character.Humanoid.WalkSpeed = speed
    Player.Character.Humanoid.JumpPower = jumpPower
end

local function activateFly(flySpeed)
    local Player = game.Players.LocalPlayer
    local Character = Player.Character
    local FlyPart = Instance.new("Part", Character)
    FlyPart.Name = "FlyPart"
    FlyPart.Size = Vector3.new(2, 2, 2)
    FlyPart.Anchored = true
    FlyPart.CFrame = Character.HumanoidRootPart.CFrame

    game:GetService("RunService").Stepped:Connect(function()
        FlyPart.CFrame = Character.HumanoidRootPart.CFrame * CFrame.new(0, flySpeed, 0)
    end)
end

local function teleportTo(location)
    local Player = game.Players.LocalPlayer
    Player.Character.HumanoidRootPart.CFrame = location
end

local function copySkin(targetPlayer)
    local Player = game.Players.LocalPlayer
    local TargetCharacter = game.Players[targetPlayer].Character

    if TargetCharacter and Player.Character then
        Player.Character.Appearance = TargetCharacter.Appearance
    end
end

-- Event handling for buttons and tabs
MinimizedButton.MouseButton1Click:Connect(function()
    Frame.Visible = false
    MinimizedIcon.Visible = true
end)

MinimizedIcon.MouseButton1Click:Connect(function()
    Frame.Visible = true
    MinimizedIcon.Visible = false
end)

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Add further functionalities to tabs accordingly
